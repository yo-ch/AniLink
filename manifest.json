{
  "manifest_version": 2,

  "name": "MyAnilist",
  "description": "Adds a link to the equivalent MyAnimeList page of Anilist anime/manga pages. Useful for when Anilist is missing information.",
  "version": "1.2",

  "applications": {
    "gecko": {
      "id": "myanilist@ext.com"
    }
  },

  "content_scripts": [{
    "matches": ["*://anilist.co/*"],
    "css": ["link.css"],
    "js": ["anilist.js"],
    "run_at": "document_idle"
  }],

  "icons": {
    "48": "images/myAnilistIcon48.png",
    "128": "images/myAnilistIcon.png"
  },

  "browser_action": {
    "default_icon": "images/myAnilistIcon.png"
  },

  "web_accessible_resources": ["images/malIcon.png"],

  "permissions": ["https://graphql.anilist.co/"]
}
